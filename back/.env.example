# Server Configuration
NODE_ENV=development
PORT=4000

# Database (PostgreSQL) - Docker Compose 기본값
DATABASE_URL="postgresql://moa:moa123@localhost:5432/moa?schema=public"

# Redis - Docker Compose 기본값
REDIS_HOST=localhost
REDIS_PORT=6379

# CORS
CORS_ORIGIN=http://localhost:3000

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key
REFRESH_TOKEN_EXPIRES_IN=7d

# Bcrypt
BCRYPT_ROUNDS=10

# File Upload
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AWS S3 (Optional - for file uploads)
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=moa-uploads

# OAuth (Optional)
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_CLIENT_SECRET=your_kakao_client_secret
KAKAO_MAP_API_KEY=your_kakao_map_api_key

# Payment (Optional)
TOSS_CLIENT_KEY=your_toss_client_key
TOSS_SECRET_KEY=your_toss_secret_key

# Email (SMTP) - 이메일 인증용
# Gmail 사용 시:
# 1. Google 계정 > 보안 > 2단계 인증 활성화
# 2. 앱 비밀번호 생성
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@moa.com

# SMS - 전화번호 인증용
# 선택 1: NHN Cloud SMS (구 Toast SMS)
# https://www.toast.com/kr/service/notification/sms
SMS_APP_KEY=your-nhn-cloud-app-key
SMS_SECRET_KEY=your-nhn-cloud-secret-key
SMS_SENDER=01012345678

# 선택 2: 알리고 (Aligo)
# https://smartsms.aligo.in/
# ALIGO_API_KEY=your-aligo-api-key
# ALIGO_USER_ID=your-aligo-user-id

# 선택 3: 네이버 클라우드 SMS
# https://www.ncloud.com/product/applicationService/sens
# NAVER_SMS_SERVICE_ID=your-naver-service-id
# NAVER_ACCESS_KEY=your-naver-access-key
# NAVER_SECRET_KEY=your-naver-secret-key

# Frontend URL - 이메일 인증 링크에 사용
FRONTEND_URL=http://localhost:3000
